{
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf", "hcl"],
      "initializationOptions": {}
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"]
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "settings": {
    "Lua": {
      "completion": {
        "enabled": true
      },
      "runtime": {
        "path": [
          "/Users/bwagner/.local/share/nvim/site/pack/packer/start"
        ]
      }
    }
  },
  "sumneko-lua": {
    "enableNvimLuaDev": true
  },
  "yaml.schemas": {
    "kubernetes": "/*.yaml,/*.yml"
  }
}
